/* pages/goods_detail/goods_detail.wxss */
page {
  padding-bottom: 90rpx;
}
.detail_swiper swiper {
  height: 65vw;
  text-align: center;
}
.detail_swiper swiper image {
  width: 60%;
}
.goods_price {
  padding: 15rpx;
  font-size: 32rpx;
  font-weight: 600;
  color: var(--themeColor);
}
.goods_name_row {
  border-top: 5rpx solid #dedede;
  border-bottom: 5rpx solid #dedede;
  display: flex;
  padding: 10rpx 0;
}
.goods_name_row .goods_name {
  flex: 5;
  color: black;
  font-size: 30rpx;
  padding: 0 10rpx;
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.goods_name_row .goods_collect {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  border-left: 1rpx solid #000;
}
.goods_name_row .goods_collect .icon-shoucang1 {
  color: orange;
}
.goods_info .goods_info_title {
  font-size: 32rpx;
  color: var(--themeColor);
  font-weight: 600;
  padding: 20rpx 0;
  border: 1rpx solid #ccc;
  padding-left: 10rpx;
}
.goods_info .gods_info_content {
  padding-left: 10rpx;
}
view.comment_wrap view.comment_title {
  font-size: 32rpx;
  color: var(--themeColor);
  font-weight: 600;
  padding: 20rpx 0;
  border: 1rpx solid #ccc;
  padding-left: 10rpx;
}
view.comment_wrap view.comment_list view.comment_item {
  border: 1rpx solid #ccc;
  padding: 10rpx 0;
  padding-left: 10rpx;
}
.btm_tool {
  border-top: 1rpx solid darkgrey;
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 90rpx;
  background-color: #fff;
  display: flex;
}
.btm_tool .tool_liuyan {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 24rpx;
}
.btm_tool .tool_liuyan .input-section {
  position: absolute;
  display: flex;
  align-items: center;
  height: 110rpx;
  bottom: 0rpx;
  left: 0rpx;
  right: 0rpx;
  z-index: 500;
  background: #fff;
}
.btm_tool .tool_liuyan .input-section .input_input {
  flex: 8;
  background: #fff;
  margin-top: 12rpx;
  z-index: 500;
  width: 580rpx;
  height: 110rpx;
  padding-left: 35rpx;
}
.btm_tool .tool_liuyan .input-section .send_btn {
  flex: 2;
  width: 110rpx;
  height: 66rpx;
  position: absolute;
  top: 24rpx;
  right: 30rpx;
  background: var(--themeColor);
  border-radius: 10rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.btm_tool .tool_liuyan .input-section .send_btn .send_btn_text {
  display: flex;
  font-size: 32rpx;
  font-family: 'PingFang';
  color: #fff;
  z-index: 560;
}
.btm_tool .tool_item {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 24rpx;
  position: relative;
}
.btm_tool .tool_item button {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  opacity: 0;
}
.btm_tool .btm_cart {
  flex: 2;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-color: #009999;
  color: #fff;
  font-size: 28rpx;
  font-weight: 600;
}
.btm_tool .btm_buy {
  flex: 2;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-color: var(--themeColor);
  color: #fff;
  font-size: 28rpx;
  font-weight: 600;
}
.sold_out {
  font-size: larger;
  display: flex;
  border-top: 1rpx solid darkgrey;
  position: fixed;
  justify-content: center;
  align-items: center;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 90rpx;
  font-weight: 900;
  color: #999999;
}
